{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" resource="{{ thing.properties.sameAs[0]['@id'] }}" typeof="schema:{{ thing.type }}">

        <p><a href="{{ path('homepage') }}">Home</a></p>

        <h1>
            {{ content_source_params.name }}
            <small>{{ content_source_params.description }}</small>
        </h1>

        <h2>
            <span property="schema:name">{{ thing.reconciled.name[0]['@value'] }}</span>
            <small>
                {% if thing.properties.dateCreated is defined %}
                    {% if thing.properties.dateCreated[0]['@type'] is defined and thing.properties.dateCreated[0]['@type'] == 'DateTime' %}
                        – {{ thing.properties.dateCreated[0]['@value']|date("D, j M Y H:i") }}
                    {% elseif thing.properties.dateCreated[0]['@type'] is defined and thing.properties.dateCreated[0]['@type'] == 'Date' %}
                        – {{ thing.properties.dateCreated[0]['@value']|date("D, j M Y") }}
                    {% else %}
                        – {{ thing.properties.dateCreated[0]['@value'] }}
                    {% endif %}
                {% endif %}
                – {{ thing.type }}
            </small>
        </h2>

        {% if thing.reconciled.thumbnail %}
            <img class="media-object" src="{{ thing.reconciled.thumbnail.contentUrl[0]['@id'] }}"/>
        {% endif %}

        <div property="schema:description">
            {% if thing.reconciled.text[0]['@type'] is defined and thing.reconciled.text[0]['@type'] == 'http://www.w3.org/1999/xhtml' %}
                {{ thing.reconciled.text[0]['@value']|raw }}
            {% else %}
                {{ thing.reconciled.text[0]['@value'] }}
            {% endif %}
        </div>

        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#dataDump" aria-expanded="false" aria-controls="dataDump">
            Show all data
        </button>
        <div class="collapse" id="dataDump">
            <pre>{{ thing_data_dump }}</pre>
        </div>
        
    </div>

{% endblock %}
